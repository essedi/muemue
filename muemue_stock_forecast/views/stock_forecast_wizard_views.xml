<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_stock_forecast_wizard" model="ir.actions.act_window">
        <field name="name">Poblar Previsión de Stock</field>
        <field name="res_model">stock.forecast.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <record id="view_stock_forecast_wizard_form" model="ir.ui.view">
        <field name="name">stock.forecast.wizard.form</field>
        <field name="model">stock.forecast.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    Esta acción buscará todos sus productos almacenables y
                    creará una línea de previsión para aquellos que no la tengan.
                </p>
                <p>
                    Puede ejecutar esto en cualquier momento para añadir
                    productos nuevos a la vista de previsión.
                </p>
                <footer>
                    <button name="action_populate_forecast_products" 
                            string="Poblar Productos" 
                            type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_forecast_update_button" model="ir.actions.server">
        <field name="name">Actualizar Lista de Previsión</field>
        <field name="model_id" ref="model_stock_forecast"/>
        <field name="binding_model_id" ref="model_stock_forecast"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
# 'model' es un recordset vacío de 'stock.forecast'
# Llamamos a la nueva función que hemos creado en el .py
action = model.action_open_poblar_wizard()
        </field>
    </record>

</odoo>