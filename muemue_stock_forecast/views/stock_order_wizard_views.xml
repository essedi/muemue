<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_stock_order_wizard_form" model="ir.ui.view">
        <field name="name">stock.order.wizard.form</field>
        <field name="model">stock.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    Revisa las cantidades y proveedores para los productos a pedir.
                    Puedes modificar las cantidades y el proveedor antes de generar los pedidos.
                </p>
                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="product_id" string="Producto"/>
                        <field name="supplier_partner_ids" invisible="1"/> <field name="supplier_id" 
                               string="Proveedor"
                               domain="[('id', 'in', supplier_partner_ids)]"
                               options="{'no_create': True, 'no_open': True}"/>
                        
                        <field name="quantity_to_order" string="Cantidad a Pedir"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_generate_purchase_orders" 
                            string="Aceptar (Generar Pedidos)" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_order_wizard" model="ir.actions.act_window">
        <field name="name">Asistente para Pedir Stock</field>
        <field name="res_model">stock.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>